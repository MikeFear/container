FROM node:lts-bookworm-slim

ENV HOST=0.0.0.0
ENV PORT=3000

RUN apt-get update; \
    apt-get install --no-install-recommends tesseract-ocr tesseract-ocr-deu tesseract-ocr-fra tesseract-ocr-eng imagemagick -y;

