{
  "name": "unoserver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/unoserver/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/unoserver",
        "format": [
          "cjs"
        ],
        "bundle": false,
        "main": "apps/unoserver/src/main.ts",
        "tsConfig": "apps/unoserver/tsconfig.app.json",
        "assets": [
          "apps/unoserver/src/assets"
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "unoserver:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "unoserver:build:development"
        },
        "production": {
          "buildTarget": "unoserver:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "dependsOn": [
        "docker-rm-arm",
        "docker-rm-amd",
        "docker-test-arm",
        "docker-test-amd"
      ],
      "options": {}
    },
    "docker-rm-arm": {
      "command": "docker image rm philiplehmann/unoserver:test-arm || exit 0"
    },
    "docker-rm-amd": {
      "command": "docker image rm philiplehmann/unoserver:test-amd || exit 0"
    },
    "docker-test-arm": {
      "dependsOn": [
        "build"
      ],
      "command": "docker buildx build -f apps/unoserver/Dockerfile --load --platform linux/arm64 --cache-to type=local,dest=.docker/unoserver-arm,mode=max --cache-from type=local,src=.docker/unoserver-arm --tag philiplehmann/unoserver:test-arm ."
    },
    "docker-test-amd": {
      "dependsOn": [
        "build"
      ],
      "command": "docker buildx build -f apps/unoserver/Dockerfile --load --platform linux/amd64 --cache-to type=local,dest=.docker/unoserver-amd,mode=max --cache-from type=local,src=.docker/unoserver-amd --tag philiplehmann/unoserver:test-amd ."
    },
    "docker-push": {
      "dependsOn": [
        "build"
      ],
      "command": "docker buildx build -f apps/unoserver/Dockerfile --push --platform linux/amd64,linux/arm64 --cache-to type=local,dest=.docker/unoserver,mode=max --cache-from type=local,src=.docker/unoserver --tag philiplehmann/unoserver:latest --tag philiplehmann/unoserver:2.0.1 ."
    }
  },
  "tags": []
}